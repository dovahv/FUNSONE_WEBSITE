<p id="notice"><%= notice %></p>

<h1>Listado de Imagenes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paintings.each do |painting| %>
      <tr>
        <td><%= painting.nombre %><br/>
          <%= image_tag painting.foto_url(:thumb) if painting.foto? %></td>
        <td><%= link_to 'Mostar', painting %></td>
        <td><%= link_to 'Editar', edit_painting_path(painting) %></td>
        <td><%= link_to 'Eliminar', painting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Imagen', new_painting_path %>
