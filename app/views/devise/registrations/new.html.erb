<div class="container-fluid text-center ">
  <div class="col-xs-3">
  </div>
<div class="col-xs-6">
  <h2 ><span class="label label-default">RegÃ­strate</span></h2>
  <br/>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
   <i class="fa fa-envelope"> Email</i>
    <br/>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
     <i class="fa fa-lock">
                Contrasena</i>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>
      characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" , label: "Contrasena"  %>
  </div>

  <div class="form-group">
 
   <i class="fa fa-lock">
                Confirma tu Contrasena</i><br/>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
  </div>
</br>
  <div class="actions">
    <%= f.submit "Registrarse", class: "form-control btn btn-primary"  %>
  </div>
  <% end %>


</div>
</div>
  <%= render "devise/shared/links" %>
