<%= simple_form_for @gallery, html: { class: 'form-horizontal',:multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="field">
      <%= '       Los Campos con (*) son Obligatorios!' %><br>
      </div>

  <div class="form-inputs">
    <%= f.input :nombre %>
  </div>

  <div class="form-inputs">
    <%= f.input :lugar %>
  </div>

    <div class="form-inputs">
    <%= f.input :fecha ,as: :date,start_year: Date.today.year - 0,
                              end_year: Date.today.year - 0, discard_day: false,
                              order: [:day,:month, :year], label: "Fecha: " %>
  </div>
   <div class="form-inputs">
    <%= f.input :descripcion %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
